######################################################################
#   Definitions
######################################################################
#---------------------------------------------------------------------
#   Global definitions of environment variables
#---------------------------------------------------------------------

. ./global_vars.sh

# Source the start file and holdvars
. "$startfile"
. "$holdvars"

if [ -z "$PYTHONPATH" ] ; then
	export PYTHONPATH=${USHhwrf}
else
	export PYTHONPATH=${PYTHONPATH}:${USHhwrf}
fi
export TOTAL_TASKS=90
export OMP_NUM_THREADS=2
cd $WORKhwrf

######################################################################
#   Main
######################################################################

export GSI_DOMAIN=D03
$EXhwrf/exhwrf_gsi.py



######################################################################
# Suggested resources based on NOAA's Jet
# walltime = 0:49:00
# nodes=15:ppn=6
######################################################################
