######################################################################
#   Definitions
######################################################################
#---------------------------------------------------------------------
#   Global definitions of environment variables
#---------------------------------------------------------------------

. ./global_vars.sh

# Source the start file and holdvars
. "$startfile"
. "$holdvars"

if [ -z "$PYTHONPATH" ] ; then
	export PYTHONPATH=${USHhwrf}
else
	export PYTHONPATH=${PYTHONPATH}:${USHhwrf}
fi
cd $WORKhwrf

######################################################################
#   Main
######################################################################


export TOTAL_TASKS=477

$EXhwrf/exhwrf_forecast.py

