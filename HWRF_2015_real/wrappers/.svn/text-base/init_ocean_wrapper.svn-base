	export PYTHONPATH=${USHhwrf}
else
	export PYTHONPATH=${PYTHONPATH}:${USHhwrf}
fi
export TOTAL_TASKS=9
cd $WORKhwrf

######################################################################
#   Main
######################################################################

export REGRIBBER_LOGS="$DATA/$jobid-regribber-%(RANK)04d.%(STREAM)s"

$USHhwrf/rocoto_pre_job.sh ${EXhwrf}/exhwrf_ocean_init.py 

