proc ModulesHelp { } {
    puts stderr "Set environment veriables for compiling HWRF"
}
module-whatis " HWRF hurricane model prerequisites"

set ver 9.0.0

# Known conflicts
conflict HWRF

# We'll be using non-default versions of everything so make sure we
# unload older versions of those modules first:
module unload hdf5
module unload netcdf
module unload pnetcdf
module unload nco
module unload rocoto
module unload intel
module unload pgi
module unload mpt
module unload hpss
module unload adaptive

# Newer version of compiler and MPI than what is presently the
# default:
module load hdf5/1.8.7
module load netcdf/4.1.3-intel
module load pnetcdf/1.5.0-intel-mpt
module load nco/4.2.0-intel-12.0.4.191
module load rocoto/1.2
module load intel/12-12.0.4.191
module load mpt/2.06
module load hpss
module load adaptive/6.1.4