#!/bin/csh -f

if ( ! -e configure.hwrf ) then
	echo "Do 'configure' first"
	exit ( 1 ) 
endif

echo " "
if ( ${#argv} == 0 ) then
	echo "**** Compiling HWRF Libs and Vortex Initialization ****"
        ( make -i -f makefile all )
else
echo "more than one argument"
set arglist=""
  foreach a ( $argv )
echo "library" $a
    if ( $a == "library" ) then
echo "inside if a"
        ( make -i -f makefile library )
echo "more than one argument"
    else
        echo "*****"
        echo " "
	echo "Unrecognized compile target $1."
        echo " "
        echo " or just run compile with no target to build everything."
        echo " "
        echo "*****"
        exit(1)
    endif
  end
endif
echo " "
exit(0)
