%include <head.h>
%include <envir-p2.h>

set -x

export MP_EUIDEVICE=sn_all
export MP_EUILIB=us

export job=hwrf%NUM%_init_gdas_f03_%CYC%
export PDY=${PDY:-%PDY:%}
export cyc=%CYC%
export storm_num=%NUM%
export stormlabel=storm%NUM%

export INIT_MODEL=GDAS1
export INIT_PARTS=3DVAR
export INIT_FHR=3

# versions file for hwrf sets $hwrf_ver and $code_ver
VERSION_FILE=${NWROOT}/versions/hwrf.ver
if [ -f $VERSION_FILE ]; then
  . $VERSION_FILE
else
  ecflow_client --msg="***JOB ${ECF_NAME} ERROR: Version File $VERSION_FILE does not exist ***"
  ecflow_client --abort
  exit
fi

sleep $INIT_FHR
${NWROOT}/hwrf.${hwrf_ver}/jobs/JHWRF_INIT

if [ $? -ne 0 ]; then
  ecflow_client --msg="***JOB ${ECF_NAME} ERROR RUNNING J-SCRIPT ***"
  ecflow_client --abort
  exit
fi

